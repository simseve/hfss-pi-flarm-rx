# OGN Production Configuration Template
# Copy this file to .env and fill in your actual credentials

# Device registration secret
MANUFACTURER_SECRET_OGN=your_manufacturer_secret_here

# Alpium API endpoint
SERVER_URL=https://ogn.alpium.io/api/v1

# Cloudflare Access service token (for API security)
CF_ACCESS_CLIENT_ID=your_cloudflare_client_id.access
CF_ACCESS_CLIENT_SECRET=your_cloudflare_client_secret_here

# Tailscale auth key (reusable for all devices)
TS_AUTHKEY=tskey-auth-xxxxx-xxxxxxxxxxxxxxxxx

# Alpium SSH public key (for seamless access from Alpium server to Raspberry Pis)
SSH_PUBLIC_KEY_OGN=ssh-ed25519 AAAAC3NzaC1... your_public_key_here
